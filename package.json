{
    "private": true,
    "name": "tg-bcc-bot",
    "version": "0.0.0",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "h11 <nirisix@gmail.com>",
    "license": "UNLICENSED",
    "scripts": {
        "start": "node ./_build/bin/server.js",
        "build": "make release"
    },
    "engines": {
        "node": "13.*",
        "yarn": "1.*"
    },
    "dependencies": {
        "@hapi/hapi": "19.1.0",
        "@hapi/joi": "17.1.0",
        "dotenv-safe": "8.2.0",
        "hapi-pino": "6.5.0",
        "knex": "0.20.9",
        "node-fetch": "2.6.0",
        "pg": "7.18.1",
        "rollbar": "2.14.4",
        "sqlite3": "4.1.1"
    },
    "devDependencies": {
        "@types/jest": "25.1.2",
        "@types/node": "13.7.0",
        "@types/node-fetch": "2.5.4",
        "jest": "25.1.0",
        "nodemon": "2.0.2",
        "prettier": "1.19.1",
        "telegram-typings": "4.0.0-beta",
        "typescript": "3.7.5"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "snapshotResolver": "./test/jest.snapshot-resolver.js",
        "testRegex": "_build/test/.*.js$"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "ignore",
        "endOfLine": "lf"
    }
}
